<!DOCTYPE html>
<html lang="zxx">

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Use Minified Plugins Version For Fast Page Load -->
    <link rel="stylesheet" type="text/css" media="screen" href="~/Public/css/plugins.css" />
    <link rel="stylesheet" type="text/css" media="screen" href="~/Public/css/main.css" />
    <link rel="shortcut icon" type="image/x-icon" href="~/Public/images/favicon.ico">
    <!-- alertify alsert -->
    <link href="~/Public/alertifyjs/css/alertify.min.css" rel="stylesheet" />
    <link href="~/Public/alertifyjs/css/themes/default.min.css" rel="stylesheet" />
    <script src="~/Public/js/plugins.js"></script>
</head>
<body>

    <div class="site-wrapper bg-light" id="top">
        @RenderSection("Header", required: false);

        <div class="ajaxload-cart ">
            <i class="fas fa-circle-notch"></i>
        </div>
        @RenderBody()
        @RenderSection("Footer", required: false);

        <!-- Use Minified Plugins Version For Fast Page Load -->
        <script src="~/Public/js/plugins.js"></script>
        <script src="~/Public/js/ajax-mail.js"></script>
        <script src="~/Public/js/custom.js"></script>
        <script src="~/Public/alertifyjs/alertify.min.js"></script>
        <script src="~/Public/js/ajaxClent.js"></script>
</body>
@RenderSection("Script", required: false);
</html>

