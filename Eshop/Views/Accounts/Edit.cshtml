<main class="page-section inner-page-sec-padding-bottom">
    <div class="container bg-white pt-3">
        <div class="row">
            <div class="col-sm-12  ">
            </div>
            <div class="col-sm-12 col-md-12 col-lg-12 col-xs-12">
                <form asp-action="Edit" enctype="multipart/form-data">
                    <div class="login-form">
                        <h4 class="login-title">Thông tin tài khoản</h4>
                        <div style="margin-left:80%; margin-top:-20px;">
                            <a class="btn btn-sm bg-danger text-white" asp-action="LogOut" asp-controller="Accounts"><span class="text-white"><i class="fas fa-power-off"></i> Đăng Xuất</span> </a>

                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="col-md-12 col-12 mb--15">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <input type="hidden" asp-for="Id" />
                                    <label asp-for="FullName" class="control-label"></label>
                                    <input asp-for="FullName" class="form-control" />
                                    <span asp-validation-for="FullName" class="text-danger"></span>
                                </div>
                                <div class="col-12 mb--20">
                                    <label asp-for="Username" class="control-label"></label>
                                    <input asp-for="Username" class="form-control" />
                                    <span asp-validation-for="Username" class="text-danger"></span>
                                </div>
                                <div class="col-md-12">
                                    <label asp-for="Password" class="control-label"></label>
                                    <input asp-for="Password" class="form-control" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div class="col-md-12">
                                    <label asp-for="Email" class="control-label"></label>
                                    <input asp-for="Email" class="form-control" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="col-md-12">
                                    <label asp-for="Phone" class="control-label"></label>
                                    <input asp-for="Phone" class="form-control" />
                                    <span asp-validation-for="Phone" class="text-danger"></span>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label asp-for="Address" class="control-label"></label>
                                        <input asp-for="Address" class="form-control" />
                                        <span asp-validation-for="Address" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <label asp-for="ImageFile" class="control-label"></label>
                                    <input type="hidden" asp-for="Avatar" />
                                    <input asp-for="ImageFile" class="form-control" />
                                    <img id="imgPreview" style=" width: 150px; margin: 20px 20px;" src="~/img/avatar/@Model.Avatar" />
                                    <span asp-validation-for="Avatar" class="text-danger"></span>
                                </div>
                                <div class="float-right">
                                    <button type="submit" class="btn btn-sm bg-success text-white"><i class="far fa-save"></i> Lưu</button>
                                    <a href="~/admin/category" class="btn btn-sm bg-danger text-white"><i class="far fa-window-close"></i> Hủy</a>
                                </div>
                            </div>


                            <span class="text-danger"> @ViewBag.Msg</span>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    @if(ViewBag.Invoice == null) { <h1> Bạn không có đơn hàng nào! Đặt hàng đi pạn</h1>}
    @foreach (var item in ViewBag.Invoice)
    {
        <div class="container bg-white pt-3">
            <div class="row">
                <div class="col-sm-12  ">
                </div>
                <div class="col-sm-12 col-md-12 col-lg-12 col-xs-12">
                    <div class="login-form">
                        <h4 class="login-title">Đơn Hàng Của Bạn</h4>
                        <div class="row">

                            <div class="col-md-6">
                                <dt class="col-sm-2">
                                    Code:
                                </dt>
                                <dd class="col-sm-10">
                                    @item.Code
                                </dd>
                                <dt class="col-sm-10">
                                    Ngày lập:
                                </dt>
                                <dd class="col-sm-10">
                                    @item.IssuedDate
                                </dd>
                                <dt class="col-sm-2">
                                    Địa chỉ:
                                </dt>
                                <dd class="col-sm-10">
                                    @item.ShippingAddress
                                </dd>
                                <dt class="col-sm-10">
                                    Số điện thoại:
                                </dt>
                                <dd class="col-sm-10">
                                    @item.ShippingPhone
                                </dd>
                            </div>
                            <div class="col-md-6">
                                <dt class="col-sm-10">
                                    Tổng tiền:
                                </dt>
                                <dd class="col-sm-10">
                                    @item.Total.ToString("#,##0") VNĐ
                                </dd>
                                <dd class="col-sm-10">
                                    @if (@item.Status == true)
                                    {
                                        <p class="text-success">Đã Xác Nhận</p>
                                    }
                                    else
                                    {
                                        <p class="text-warning">Chưa Xác Nhận</p>
                                    }

                                </dd>
                            </div>


                            <span class="text-danger"> @ViewBag.Msg</span>
                           
                        </div>
                    </div>
                </div>
            </div>
        </div>
         }
