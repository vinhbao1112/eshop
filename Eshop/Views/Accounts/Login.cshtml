<main class="page-section inner-page-sec-padding-bottom">
    <div class="container bg-white pt-3">
        <div class="row">
            <div class="col-sm-12  ">
            </div>
            <div class="col-sm-12 col-md-12 col-lg-12 col-xs-12">
                <form asp-action="Login" asp-controller="Accounts" method="POST">
                    <div class="login-form">
                        <h4 class="login-title">Đăng nhập</h4>
                        <div class="row">
                            <div class="col-md-12 col-12 mb--15">
                                <label asp-for="Username">Tên đăng nhập</label>
                                <input asp-for="Username" class="mb-0 form-control" type="text"
                                       placeholder="Nhập tên đăng nhập">
                            </div>
                            <div class="col-12 mb--20">
                                <label asp-for="Password">Password</label>
                                <input class="mb-0 form-control" type="password" asp-for="Password" id="login-password" placeholder="Nhập mật khẩu">
                            </div>
                            <div class="col-md-12">
                                <button type="submit" class="btn btn-outlined">Đăng nhập</button>
                            </div>
                            <span class="text-danger"> @ViewBag.Msg</span>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</main>
