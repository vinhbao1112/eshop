@model Eshop.Models.Account

@{
    ViewData["Title"] = "Details";
}
@Html.Partial("~/Areas/Admin/Views/Shared/_topMenu.cshtml")
@Html.Partial("~/Areas/Admin/Views/Shared/_leftMenu.cshtml")
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row m-0 bg-light">
                <div class="col-sm-6 ">
                    <h1 class="m-0 text-dark">Chi Tiết Tài Khoản</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/Admin/Home/Dashboard">Home</a></li>
                        <li class="breadcrumb-item active">Chi tiết tài khoản</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->


    <section class="pt-2">
        <div class="container bg-white p-4 card">
            <div class="row">
                <div class="col-md-4">  </div>
                <div class="col-md-4"> <h3 class="text-center font-weight-bold text-success "> CHI TIẾT TÀI KHOẢN</h3> </div>
                <div class="col-md-4 ">

                </div>
            </div>
            <div class=" row" style="margin-top:50px;">
                <div class="col-md-6">
                    <dt class="col-sm-10">
                        @Html.DisplayNameFor(model => model.Username)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Username)
                    </dd>
                    <dt class="col-sm-10">
                        @Html.DisplayNameFor(model => model.Avatar)
                    </dt>
                    <dd class="col-sm-10">
                        <img width="170px" height="220px" src="/img/avatar/@Html.DisplayFor(model => model.Avatar)" alt="Alternate Text" />
                    </dd>

                </div>
                <div class="col-md-6">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Password)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Password)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Email)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Email)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Phone)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Phone)
                    </dd>

                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.FullName)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.FullName)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Address)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Address)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.IsAdmin)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.IsAdmin)
                    </dd>
                    <dt class="col-sm-10">
                        @Html.DisplayNameFor(model => model.Status)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Status)
                    </dd>
                </div>
                <br />
                <br />
                <div>
                    <a class="btn btn-sm bg-danger text-white" asp-action="LogOut" asp-controller="Accounts"><span class="text-white"><i class="fas fa-power-off"></i> Đăng Xuất</span> </a>

                </div>
            </div>

        </div>
    </section>







