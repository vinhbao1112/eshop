@model IEnumerable<Eshop.Models.Product>

@{
    ViewData["Title"] = "Index";
}
@Html.Partial("~/Areas/Admin/Views/Shared/_topMenu.cshtml")
@Html.Partial("~/Areas/Admin/Views/Shared/_leftMenu.cshtml")

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row m-0">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">Quản Lý Sách</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/Admin/Home/Dashboard">Home</a></li>
                        <li class="breadcrumb-item active">Quản Lý Sách</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->

    <section class="container-fluid ">
        <div class=" bg-white card  ">
            <div class="row justify-content-end">
                <div class="col-md-3">
                    <div class=" pt-1 ml-5">
                        <a class="text-white btn-sm btn-success" asp-action="Create">Thêm Sách <i class="fas fa-plus"></i></a>
                        <a class="text-white btn-sm btn-danger " href="~/admin/Products/trash">Thùng rác<i class="fas fa-trash"></i></a>
                    </div>
                </div>
            </div> <br />
            <form asp-action="Search" method="get">
                Code: <input type="text" name="sku"/>
                Tên Sản Phẩm: <input type="text" name="name"/>
                Tác Giả: <input type="text" name="author"/>
                Loại Sản  Phẩm: <select name="productTypeId" asp-items="@ViewBag.productTypeId"></select> 
                Khoảng Giá tiền: <input type="text" name="miniprice"/> -> <input type="text" name="maxprice"/><br />
                                                                          <button class="btn-secondary" style="margin-left:92%; margin-top:1%;" type="submit">Tìm kiếm</button>
               
            </form>
            <div class="row">
                <div class="col-md-9  w-100 ">                
                </div>
                <div class="col-md-12 p-3">
                    <table id="myTable1" class="table table-striped table-bordered dt-responsive nowrap">
                        <thead>
                            <tr>                             
                                <th>
                                    @Html.DisplayNameFor(model => model.Image)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.SKU)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Author)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Price)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Stock)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ProductType)
                                </th>

                                <th>
                                    @Html.DisplayNameFor(model => model.Status)
                                </th>
                                <th></th>
                                <th>
                                    @Html.DisplayNameFor(model => model.CreatedAt)
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>                             
                                <td>
                                    <img style="margin-left:40px;" width="50px" height="70px" src="/img/product/@Html.DisplayFor(modelItem => item.Image)" alt="Alternate Text" />
                                    
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SKU)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    <div style="margin-bottom:-30px;">
                                        @Html.Raw(item.Author)

                                    </div>
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Price)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Stock)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ProductType.Name)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.Status)
                                </td>
                                <td>
                                    <a class="btn btn-sm btn-light text-warning border" asp-action="Edit" asp-route-id="@item.Id"> <i class="fas fa-edit"></i></a>
                                    <a class="btn btn-sm btn-light text-success border" asp-action="Details" asp-route-id="@item.Id"> <i class="fas fa-eye"></i></a>
                                    <a class="btn btn-sm btn-light text-danger border" asp-action="Delete" asp-route-id="@item.Id"><i class="fas fa-trash-alt"></i></a>
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CreatedAt)
                                </td>
                            </tr>
                            }
                        </tbody>

                    </table>
                </div>
            </div>
        </div>
