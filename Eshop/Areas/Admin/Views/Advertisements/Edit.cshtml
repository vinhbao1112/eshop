@model Eshop.Areas.Admin.Models.Advertisement

@{
    ViewData["Title"] = "Edit";
}
@Html.Partial("~/Areas/Admin/Views/Shared/_topMenu.cshtml")
@Html.Partial("~/Areas/Admin/Views/Shared/_leftMenu.cshtml")
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row m-0 bg-light">
                <div class="col-sm-6 ">
                    <h1 class="m-0 text-dark">Cập Nhật Hình Ảnh</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/Admin/Home/Dashboard">Home</a></li>
                        <li class="breadcrumb-item active">Cập nhật hình ảnh</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->


    <section class="pt-2">
        <div class="container bg-white p-4 card">
            <div class=" row ">
                <div class="col-md-4">  </div>
                <div class="col-md-4"> <h3 class="text-center font-weight-bold text-success "> CẬP NHẬT HÌNH ẢNH</h3> </div>
                <div class="col-md-4 ">

                </div>
            </div>
            <form asp-action="Edit" enctype="multipart/form-data">
                <div class=" row ">
                    <div class="col-md-7">
                       
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        <div class="form-group">
                            <label asp-for="ImageFile" class="control-label"></label>
                            <input type="hidden" asp-for="Image" />
                            <input asp-for="ImageFile" class="form-control" />
                            <img id="imgPreview" style=" width: 400px; margin: 40px 20px;" src="~/img/advertisement/@Model.Image" />
                            <span asp-validation-for="Image" class="text-danger"></span>
                        </div>
                       
                    </div>
                    <div class="col-md-5">
                        <div class="form-group">
                            <label asp-for="ImageTypeId" class="control-label"></label>
                            <select asp-for="ImageTypeId" class="form-control" asp-items="ViewBag.ImageTypeId"></select>
                            <span asp-validation-for="ImageTypeId" class="text-danger"></span>
                        </div>
                        <div class="form-group">

                            <div class="float-right">
                                <button type="submit" class="btn btn-sm bg-success text-white"><i class="far fa-save"></i> Lưu</button>
                                <a href="~/admin/category" class="btn btn-sm bg-danger text-white"><i class="far fa-window-close"></i> Hủy</a>
                            </div>
                        </div>
                    </div>


                </div>
            </form>

        </div>
    </section>
    @section Script {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        <script>
            $(document).ready(function () {
                $("#ImageFile").on("change", function (event) {
                    var filePath = URL.createObjectURL(event.target.files[0]);
                    $("#imgPreview").attr("src", filePath);
                })
            })
        </script>
    }







